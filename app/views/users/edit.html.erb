<div class="container">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <div class="mt-3">
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    
      <%= form_with model: @user, method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %> 
        </div>
        <div class="form-group">
          <label for="inputAge">Age</label>
        <%= f.number_field :age, autofocus: true, id:"inputAge", min: 1, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


