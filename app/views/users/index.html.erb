<p id="notice">
  <%= flash[:notice] %>
</p>

<div class="container px-5 px-sm-0">
  <div class="row mt-3">

    <div class="col-md-3">
      <%= render 'info', user: current_user %>

      <%= render 'books/form', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>ユーザー検索</h1>
      <%= search_form_for @q, url: ransack_users_path do |f| %>
        <%= f.label :name_cont, 'ユーザー名' %>
        <%= f.search_field :name_cont %>
        <br>
        <%= f.radio_button :age_lteq, '' %>指定しない
        <%= f.radio_button :age_lteq, '10' %>10歳以下
        <%= f.radio_button :age_lteq, '20' %>20歳以下
        <%= f.radio_button :age_lteq, '30' %>30歳以下
        <%= f.radio_button :age_lteq, '40' %>40歳以下
        <%= f.radio_button :age_gteq, '50' %>50歳以上
        <br>
        <%= f.submit '検索' %>
      <% end %>
      
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
　　　　　　<!--これで矢印を消せる-->
            <!--<th><%#= sort_link(@q, :age, "Age", hide_indicator: true) %></th>-->
            <th><%= sort_link(@q, :age, "Age") %></th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %><tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td><%= user.age %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td>
              <% if user != current_user %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr><% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>